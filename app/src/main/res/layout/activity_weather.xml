
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg03_png"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".WeatherActivity">

    <TextView
        android:id="@+id/label02"
        android:text="Receiver"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/locationTextView"
        android:layout_alignStart="@+id/locationTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Time"
        android:id="@+id/condDescr"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/temperatureTextView"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/temperature"
        android:id="@+id/temperatureTextView"
        android:textStyle="normal"
        android:typeface="serif"
        android:textSize="12dp"
        android:layout_marginBottom="68dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/location"
        android:id="@+id/locationTextView"
        android:textStyle="normal"
        android:textSize="12dp"
        android:layout_above="@+id/condDescr"
        android:layout_alignParentLeft="true" />

</RelativeLayout>
